<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl">

    <include
        layout="@layout/app_toolbar_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



    <LinearLayout

         android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_account_circle_black"
                android:layout_marginTop="10dp"
                android:layout_weight="0.5"
                />

            <com.ebda3.design.MyEditText

                android:id="@+id/full_name_reg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:hint="الاسم بالكامل"
                android:inputType="textPersonName"
                android:textSize="14dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:orientation="horizontal">

            <ImageView
                 android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_library_books_black_24dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.5"
                />

            <Spinner
                android:textAlignment="center"
android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5"

                android:id="@+id/spinner_cat"

                 />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:orientation="horizontal">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_phone_black_24dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.5"
                />

            <com.ebda3.design.MyEditText
android:maxLength="11"

                android:id="@+id/contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:hint="رقم التواصل  "
                android:inputType="phone"
                android:textSize="14dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:orientation="horizontal">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_place_black_24dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.5"
                />

            <com.ebda3.design.MyEditText

                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:hint="العنوان  "
                android:inputType="textPersonName"
                android:textSize="14dp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/progress1"
            android:visibility="gone"
 android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ProgressBar

                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <LinearLayout

            android:padding="5dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.ebda3.design.MyButton
                android:clickable="true"
                android:id="@+id/join"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:text="انصم الينا"
                android:background="@color/imagepicker_teal_dark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>



    </LinearLayout>

</LinearLayout>