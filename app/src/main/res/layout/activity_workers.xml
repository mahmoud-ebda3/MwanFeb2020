<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl">

    <LinearLayout
        android:id="@+id/workers_section"
        android:visibility="gone"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <com.ebda3.design.MyTextView
            android:id="@+id/no_data"
            android:visibility="gone"
            android:layout_gravity="center_vertical"
            android:text="لا توجد مجالات"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:textSize="22dp"
            android:layout_height="wrap_content" />

        <ProgressBar
            android:id="@+id/loadProgress"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ListView

android:layout_marginTop="12dp"

            android:id="@+id/offersList"
            android:background="#f9f9f9"

            android:divider="@android:color/transparent"
            android:dividerHeight="8.5sp"

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="90"


            >
        </ListView>







    </LinearLayout>

    <LinearLayout
        android:id="@+id/workers"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:clickable="true"
            android:id="@+id/search_worker"
            android:background="@drawable/search_worker"
            android:layout_width="match_parent"
            android:layout_height="200dp" />
        <ImageView
            android:clickable="true"
            android:id="@+id/add_worker"
            android:background="@drawable/add_worker"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

    </LinearLayout>

</LinearLayout>