<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl">

    <androidx.cardview.widget.CardView
        android:layout_margin="8dp"
        android:id="@+id/card_shoppingcart_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <LinearLayout
            android:layoutDirection="rtl"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"

                >

                <ImageView

                    android:layout_margin="8dp"
                    android:id="@+id/img_my_product_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                     />
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layoutDirection="rtl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:orientation="vertical">
                <LinearLayout

                    android:gravity="right"
                    android:layoutDirection="rtl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical">

                    <com.ebda3.design.MyTextView
                        android:textSize="13dp"
                        android:gravity="right"
                        android:id="@+id/txt_product_name_cart"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="اسم الموبايل" />




                </LinearLayout>


                <LinearLayout

                    android:layout_gravity="right"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"

                    android:layoutDirection="rtl"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">
                    <com.ebda3.design.MyTextView
                        android:textColor="@color/black"
                        android:textSize="13dp"
                        android:gravity="right"
                        android:id="@+id/txt_product_name44"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="الكمية : " />
                    <ImageView
                        android:scaleType="fitXY"
                        android:id="@+id/plus_product_count"
                        android:layout_width="21dp"
                        android:layout_height="21dp"
                        app:srcCompat="@drawable/ic_add_circle_outline_black_24dp" />
                    <com.ebda3.design.MyTextViewSemibold
                        android:gravity="center"
                        android:id="@+id/txt_product_count_cart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:text="1" />
                    <ImageView
                        android:scaleType="fitXY"
                        android:id="@+id/minus_product_count"
                        android:layout_width="21dp"
                        android:layout_height="21dp"
                        app:srcCompat="@drawable/ic_remove_circle_outline_black_24dp" />

                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:id="@+id/details_linear_id"
                android:gravity="center"
                android:layout_weight="1.8"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </LinearLayout>

            <LinearLayout

                android:gravity="top|left"
                android:layoutDirection="rtl"
                android:layout_width="30dp"
                android:layout_height="wrap_content"

                android:orientation="vertical">

                <ImageView
                    android:layout_marginTop="15dp"
                    android:scaleType="fitXY"
                    android:id="@+id/delete_product"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:srcCompat="@drawable/ic_delete_forever_black_24dp" />

            </LinearLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>