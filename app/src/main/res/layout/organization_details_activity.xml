<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/scroll_info_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_weight="2.8"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <com.ebda3.design.MyTextViewSemibold
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="التسجيل"
        android:textSize="21dp"
        android:layout_gravity="center"
        android:gravity="center" />
        <com.ebda3.design.MyTextViewSemibold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="بيانات المؤسسة"
            android:textSize="16dp"
            android:layout_gravity="center"
            android:gravity="center" />
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:background="@drawable/shape"
            android:layout_height="45dp">
            <com.ebda3.design.MyEditText
                android:gravity="center_vertical|right"
                android:inputType="textPersonName"
                android:id="@+id/organization_name"
                android:paddingRight="10dp"
                android:hint="اسم المؤسسة"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:background="@drawable/shape"
            android:layout_height="45dp">

            <Spinner
                android:textAlignment="center"
                android:id="@+id/spinner_organiztion"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="4"
                android:gravity="center"
                android:spinnerMode="dropdown" >
                </Spinner>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:background="@drawable/shape"
            android:layout_height="45dp">

            <com.ebda3.design.MyEditText
                android:gravity="center_vertical|right"
                android:inputType="textPersonName"
                android:id="@+id/organization_address"
                android:paddingRight="10dp"
                android:hint="العنوان"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"/>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:background="@drawable/shape"
            android:layout_height="45dp">
            <com.ebda3.design.MyEditText
                android:gravity="center_vertical|right"
                android:inputType="number"
                android:id="@+id/organiztion_phone"
                android:paddingRight="10dp"
                android:hint="رقم الهاتف"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"/>
        </LinearLayout>

        <LinearLayout
            android:layoutDirection="rtl"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <LinearLayout
                android:clickable="true"
                android:layout_marginLeft="5dp"
                android:id="@+id/trade_linear"
                android:layoutDirection="rtl"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:background="@drawable/shape"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/trade_img"
                    android:layout_margin="7dp"
                    android:background="@drawable/ic_attach_30"
                    android:layout_weight="3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <com.ebda3.design.MyTextView
                    android:id="@+id/trade_text"
                    android:layout_weight="1"
                    android:paddingRight="3dp"
                    android:textSize="10dp"
                    android:hint="صورة السجل التجارى"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"/>
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:clickable="true"
                android:layout_marginLeft="5dp"
                android:id="@+id/trade_select_done"
                android:layoutDirection="rtl"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:paddingRight="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_checkmark"/>
                <com.ebda3.design.MyTextView
                    android:clickable="true"
                    android:id="@+id/change_trade_photo"
                    android:maxLines="2"
                    android:textSize="11dp"
                    android:textColor="#78B2FA"
                    android:text="تغيير صورة السجل التجارى ؟"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:clickable="true"
                android:id="@+id/tax_linaer_layout"
                android:layoutDirection="rtl"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:background="@drawable/shape"
                android:layout_height="match_parent"
                android:gravity="center">
                <ImageView
                    android:id="@+id/tax_card_img"
                    android:layout_margin="7dp"
                    android:background="@drawable/ic_attach_30"
                    android:layout_weight="3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <com.ebda3.design.MyTextView
                    android:id="@+id/tax_card_text"
                    android:layout_weight="1"
                    android:textSize="10dp"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:paddingRight="3dp"
                    android:hint="صورة البطاقة الضريبية "
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"/>
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:clickable="true"
                android:layout_marginLeft="5dp"
                android:id="@+id/tax_select_done"
                android:layoutDirection="rtl"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:paddingRight="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_checkmark"/>
                <com.ebda3.design.MyTextView
                    android:clickable="true"
                    android:id="@+id/tax_change_image"
                    android:maxLines="2"
                    android:textSize="11dp"
                    android:textColor="#78B2FA"
                    android:text="تغيير صورة البطاقة الضريبية ؟"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layoutDirection="rtl"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.ebda3.design.MyTextView
                android:layout_weight=".8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="مواعيد العمل من"/>

            <LinearLayout
                android:clickable="true"
                android:id="@+id/time_from_linear"
                android:layoutDirection="rtl"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:background="@drawable/shape"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">
                <com.ebda3.design.MyTextView
                    android:textSize="12dp"
                    android:id="@+id/time_from_text"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <com.ebda3.design.MyTextView
                android:layout_weight="1.2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="الى"/>

            <LinearLayout
                android:clickable="true"
                android:id="@+id/time_to_linear"
                android:layoutDirection="rtl"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:background="@drawable/shape"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <com.ebda3.design.MyTextView
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="12dp"
                    android:id="@+id/time_to_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layoutDirection="rtl"
            android:layout_weight=".8"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ProgressBar
                android:id="@+id/register_progress_organization"
                android:visibility="gone"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="30dp" />

                <com.ebda3.design.MyButton
                    android:gravity="center"
                    android:id="@+id/finish_reg_bu"
                    android:background="@drawable/shape_circle_button"
                    android:textColor="@android:color/white"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:layout_gravity="center"
                    android:text="اتمام التسجيل"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp" />

        </LinearLayout>



    </LinearLayout>

    </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_below="@+id/scroll_info_2"
        android:gravity="bottom"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_alignParentBottom="true"
            android:gravity="bottom"
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView

                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="bottom"
                android:background="@drawable/m2">
            </ImageView>
        </LinearLayout>
    </RelativeLayout>
    </RelativeLayout>
</LinearLayout>