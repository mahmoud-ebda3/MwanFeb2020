<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:background="@drawable/nav_background_4"
     android:orientation="vertical"
    android:layoutDirection="rtl"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">
    <LinearLayout
        android:layout_gravity="center_vertical"
        android:layout_marginTop="50dp"
        android:padding="10dp"
        android:id="@+id/profile"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">




    <ImageView
        android:layout_marginLeft="15dp"
        android:id="@+id/nav_user_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:srcCompat="@android:drawable/sym_def_app_icon" />

        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <com.ebda3.design.MyTextView
                android:id="@+id/nav_user_name"
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="اسم المستخدم"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
            <com.ebda3.design.MyTextView
                android:id="@+id/nav_user_email"
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="بريد المستخدم"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
