<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_shoppingcart_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layoutDirection="rtl"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                >

                <ImageView
                    android:id="@+id/img_my_product_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"

                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:layoutDirection="rtl"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-2dp"
                    android:gravity="right"
                    android:layoutDirection="rtl"
                    android:orientation="vertical">

                    <com.ebda3.design.MyTextView
                        android:id="@+id/txt_product_name_cart"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="اسم الموبايل" />

                    <com.ebda3.design.MyTextView
                        android:id="@+id/txt_Partner_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="البائع" />


                </LinearLayout>


                <LinearLayout

                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"

                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layoutDirection="rtl"

                    android:orientation="horizontal">

                    <com.ebda3.design.MyTextView
                        android:id="@+id/txt_product_name44"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="الكمية : " />

                    <ImageView
                        android:id="@+id/plus_product_count"
                        android:layout_width="21dp"
                        android:layout_height="21dp"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/ic_add_circle_outline_black_24dp" />

                    <com.ebda3.design.MyTextViewSemibold
                        android:id="@+id/txt_product_count_cart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:gravity="center"
                        android:text="1" />

                    <ImageView
                        android:id="@+id/minus_product_count"
                        android:layout_width="21dp"
                        android:layout_height="21dp"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/ic_remove_circle_outline_black_24dp" />

                </LinearLayout>

                <com.ebda3.design.MyTextViewBold
                    android:id="@+id/txt_product_price_cart"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="السعر  "

                    android:textColor="@color/black" />

            </LinearLayout>

            <LinearLayout

                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:gravity="top|left"
                android:layoutDirection="rtl"

                android:orientation="vertical">

                <ImageView
                    android:id="@+id/delete_product"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="15dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/ic_delete_forever_black_24dp" />

            </LinearLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>