<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layoutDirection="rtl"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.ebda3.design.MyTextView
                android:textSize="11dp"
                android:paddingLeft="15dp"
                android:layout_weight="2"
                android:id="@+id/details"
                android:text="تفاصيل المناقصة تفاصيل المناقصة تفاصيل المناقصة تفاصيل المناقصة تفاصيل المناقصة تفاصيل المناقصة تفاصيل المناقصة تفاصيل المناقصة تفاصيل المناقصة "
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/ic_purchase"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />

                    <com.ebda3.design.MyTextView
                        android:textColor="@color/black"
                        android:id="@+id/bID"
                        android:text="رقم : 55 "
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/ic_comment_black_24dp"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />

                    <com.ebda3.design.MyTextView
                        android:textColor="@color/black"
                        android:id="@+id/replies"
                        android:text="الردود : 55 "
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/ic_date_range_black_24dp"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />

                    <com.ebda3.design.MyTextView
                        android:layout_marginTop="3dp"
                        android:textColor="@color/black"
                        android:id="@+id/add_date"
                        android:text="28/06/2018"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>





            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>