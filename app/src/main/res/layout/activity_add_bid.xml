<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:layoutDirection="rtl">



    <LinearLayout
        android:padding="15dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.ebda3.design.MyTextView
            android:text="من فضلك اكتب مواصفات المناقصة"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/details"
            android:lines="8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.ebda3.design.MyTextView
            android:text="اختار تاريخ تنفيذ المناقصة "
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:id="@+id/choose_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="2dp"
            android:clickable="true"
            android:gravity="right"
            android:padding="8dp">

            <ImageView
                android:layout_marginTop="2dp"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/ic_date_range_black_24dp" />

            <com.ebda3.design.MyTextViewSemibold
                android:id="@+id/ch_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="28/12/2018"
                android:textSize="16dp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/progress1"
            android:visibility="gone"
            android:gravity="center"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ProgressBar

                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:clickable="true"
            android:id="@+id/add"
            android:padding="8dp"
            android:background="@color/custom_main"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginLeft="5dp"
                android:src="@drawable/ic_check_circle_white_24dp"
                android:layout_width="28dp"
                android:layout_height="28dp" />

            <com.ebda3.design.MyTextViewSemibold
                android:textSize="18dp"
                android:textColor="@color/white"
                android:text="اضافة المناقصة  "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>



    </LinearLayout>




</LinearLayout>