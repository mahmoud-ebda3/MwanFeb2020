<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:layoutDirection="rtl">


    <include
        layout="@layout/app_toolbar_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/LoadingLinearLayout"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ProgressBar
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ErrorLinearLayout"
                android:visibility="gone"
                android:padding="15dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.ebda3.design.MyTextViewSemibold

                    android:textSize="18dp"
                    android:textColor="@color/red"
                    android:gravity="center"
                    android:text="توجد مشكلة"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <com.ebda3.design.MyButton
                    android:id="@+id/retry"
                    android:padding="10dp"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:text="اعادة المحاولة"
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/MainLinearLayout"
                android:visibility="gone"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:background="#0087C2"
                    android:layout_width="match_parent"
                    android:layout_height="110dp">

                    <RelativeLayout

                        android:background="#0087C2"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_marginBottom="1dp">

                        <ImageView
                            android:layout_centerInParent="true"
                            android:id="@+id/user_photo"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            app:srcCompat="@android:drawable/sym_def_app_icon" />

                        <ImageView
                            android:visibility="gone"
                            android:layout_centerInParent="true"
                            android:id="@+id/upload"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/ic_file_upload_white_24dp"
                            />


                    </RelativeLayout>


                    <LinearLayout
                        android:id="@+id/status"
                        android:paddingRight="20dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">


                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.ebda3.design.MyTextViewBold
                                android:textColor="@color/white"
                                android:text="عدد المشتريات"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content" />
                            <com.ebda3.design.MyTextView
                                android:textColor="@color/white"
                                android:id="@+id/purchases"
                                android:text="الاسم"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.ebda3.design.MyTextViewBold
                                android:textColor="@color/white"
                                android:text="رصيد النقاط"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content" />
                            <com.ebda3.design.MyTextView
                                android:textColor="@color/white"
                                android:id="@+id/points"
                                android:text="الاسم"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content" />

                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:padding="15dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">



                    <LinearLayout
                        android:id="@+id/account_id"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.ebda3.design.MyTextViewBold
                            android:textColor="@color/black"
                            android:text="رقم العضوية"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content" />
                        <com.ebda3.design.MyTextView

                            android:id="@+id/code"
                            android:text="الاسم"
                            android:layout_width="0dp"
                            android:layout_weight="1.5"
                            android:layout_height="wrap_content" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.ebda3.design.MyTextViewBold
                            android:textColor="@color/black"
                            android:text="الاسم"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content" />
                        <com.ebda3.design.MyTextView
                            android:gravity="right"
                            android:id="@+id/name"
                            android:text="الاسم"
                            android:layout_width="0dp"
                            android:layout_weight="1.5"
                            android:layout_height="wrap_content" />
                        <com.ebda3.design.MyEditText
                            android:textSize="13dp"
                            android:visibility="gone"
                            android:id="@+id/edit_name"
                            android:text="الاسم"
                            android:layout_width="0dp"
                            android:layout_weight="1.5"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/edit_password_linear"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.ebda3.design.MyTextViewBold
                            android:textColor="@color/black"
                            android:text="كلمة السر"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content" />

                        <com.ebda3.design.MyEditText
                            android:textSize="13dp"
                            android:gravity="center"
                            android:inputType="textPassword"
                            android:id="@+id/edit_password"
                            android:hint="******"
                            android:text=""
                            android:layout_width="0dp"
                            android:layout_weight="1.5"
                            android:layout_height="wrap_content" />

                    </LinearLayout>


                    <LinearLayout
                        android:visibility="gone"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.ebda3.design.MyTextViewBold
                            android:gravity="right"
                            android:textColor="@color/black"
                            android:text="البريد الالكترونى"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content" />
                        <com.ebda3.design.MyTextView
                            android:gravity="right"
                            android:id="@+id/email"
                            android:text="الاسم"
                            android:layout_width="0dp"
                            android:layout_weight="1.5"
                            android:layout_height="wrap_content" />
                        <com.ebda3.design.MyEditText
                            android:textSize="13dp"
                            android:visibility="gone"
                            android:gravity="right"
                            android:id="@+id/edit_email"
                            android:inputType="textEmailAddress"
                            android:text="الاسم"
                            android:layout_width="0dp"
                            android:layout_weight="1.5"
                            android:layout_height="wrap_content" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.ebda3.design.MyTextViewBold
                            android:textColor="@color/black"
                            android:text="الموبايل"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content" />
                        <com.ebda3.design.MyTextView
                            android:gravity="right"
                            android:id="@+id/phone"
                            android:text="الاسم"
                            android:layout_width="0dp"
                            android:layout_weight="1.5"
                            android:layout_height="wrap_content" />

                        <com.ebda3.design.MyEditText
                            android:textSize="13dp"
                            android:visibility="gone"
                            android:maxLength="12"
                            android:inputType="phone"
                            android:id="@+id/edit_phone"
                            android:text="الاسم"
                            android:layout_width="0dp"
                            android:layout_weight="1.5"
                            android:layout_height="wrap_content" />

                    </LinearLayout>
                    <LinearLayout
                        android:visibility="gone"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.ebda3.design.MyTextViewBold
                            android:textColor="@color/black"
                            android:text="العنوان"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content" />
                        <com.ebda3.design.MyTextView
                            android:gravity="right"
                            android:id="@+id/address"
                            android:text="الاسم"
                            android:layout_width="0dp"
                            android:layout_weight="1.5"
                            android:layout_height="wrap_content" />
                        <com.ebda3.design.MyEditText
                            android:textSize="13dp"
                            android:visibility="gone"
                            android:id="@+id/edit_address"
                            android:text="الاسم"
                            android:layout_width="0dp"
                            android:layout_weight="1.5"
                            android:layout_height="wrap_content" />

                    </LinearLayout>
                    <LinearLayout
                        android:visibility="gone"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.ebda3.design.MyTextViewBold
                            android:textColor="@color/black"
                            android:text="الوظيفة"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content" />
                        <com.ebda3.design.MyTextView
                            android:gravity="right"
                            android:id="@+id/job"
                            android:text="الاسم"
                            android:layout_width="0dp"
                            android:layout_weight="1.5"
                            android:layout_height="wrap_content" />
                        <com.ebda3.design.MyEditText
                            android:textSize="13dp"
                            android:visibility="gone"
                            android:id="@+id/edit_job"
                            android:text="الاسم"
                            android:layout_width="0dp"
                            android:layout_weight="1.5"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_gravity="center"
                        android:layout_margin="15dp"
                        android:clickable="true"
                        android:id="@+id/edit"
                        android:padding="5dp"
                        android:background="@color/background_color"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_marginTop="3dp"
                            android:layout_marginLeft="5dp"
                            android:src="@drawable/ic_border_color_white_24dp"
                            android:layout_width="20dp"
                            android:layout_height="20dp" />

                        <com.ebda3.design.MyTextView
                            android:textSize="16dp"
                            android:textColor="@color/white"
                            android:text="تعديل البيانات   "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>


                    <LinearLayout
                        android:visibility="gone"
                        android:layout_gravity="center"
                        android:layout_margin="15dp"
                        android:clickable="true"
                        android:id="@+id/save"
                        android:padding="5dp"
                        android:background="@color/background_color"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_marginLeft="5dp"
                            android:src="@drawable/ic_save_white_24dp"
                            android:layout_width="24dp"
                            android:layout_height="24dp" />

                        <com.ebda3.design.MyTextViewSemibold
                            android:textSize="18dp"
                            android:textColor="@color/white"
                            android:text="حفظ  "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>
                    <ProgressBar
                        android:visibility="gone"
                        android:id="@+id/progressBar"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />






                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </ScrollView>



</LinearLayout>