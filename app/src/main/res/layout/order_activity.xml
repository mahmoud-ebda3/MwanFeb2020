<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        layout="@layout/app_toolbar_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4.2"
        android:orientation="vertical">

        <com.ebda3.design.MyTextView
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/textView2"
            android:text="الطلبات"
            android:textSize="22dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:backgroundTint="#0087C2"
                android:background="@drawable/shape_no_radius"
                android:layoutDirection="rtl"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="60dp">


                <com.ebda3.design.MyTextView
                    android:textColor="@android:color/white"
                    android:text="النوع"
                    android:background="@drawable/shape_textview_border_left"
                    android:gravity="center"
                    android:layout_weight=".7"
                    android:textSize="18dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <com.ebda3.design.MyTextView
                    android:textColor="@android:color/white"
                    android:text="الكمية"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:background="@drawable/shape_textview_border_left"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />


                <com.ebda3.design.MyTextView
                    android:paddingTop="2dp"
                    android:textColor="@android:color/white"
                    android:text="التكلفة"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <ListView
                android:padding="3dp"
                android:id="@+id/list_order_details_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:orientation="vertical">
        <View
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/black" />

        <LinearLayout
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:layoutDirection="rtl"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.ebda3.design.MyTextView
                android:layout_marginLeft="5dp"
                android:id="@+id/order_available_id"
                android:background="@drawable/shape"
                android:textSize="18dp"
                android:text="متوفر"
                android:backgroundTint="#0087C2"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <com.ebda3.design.MyTextView
                android:background="@drawable/shape"
                android:id="@+id/order_sum_id"
                android:textSize="18dp"
                android:text="الإجمالى : 1000"
                android:backgroundTint="#403D3D"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="50dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>